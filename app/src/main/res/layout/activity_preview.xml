<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.PreviewActivity"
    android:background="@color/black"
    >

    <ImageView
        android:id="@+id/imgview_backArrow"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_backarrow"
        android:tint="@color/white"/>

    <VideoView
        android:id="@+id/video_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/imgview_backArrow"
        android:background="@color/black"
        android:layout_marginTop="10dp"
        android:src="@drawable/sad_emoji"/>

    <ImageView
        android:id="@+id/imgview_shareVideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_share"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp" />

    <ImageView
        android:id="@+id/imgview_downlodeVideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/imgview_shareVideo"
        android:src="@drawable/ic_download"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:tint="@color/white"/>


</RelativeLayout>